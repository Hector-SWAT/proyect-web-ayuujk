---
// src/layouts/Layout.astro
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="AYUUJK - Servicio de taxi confiable en Los Angeles" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/logo-new-ayuujk.png" />
        <title>{title}</title>
    </head>
    <body class="bg-slate-800 text-white min-h-screen relative">
        <slot />
    </body>
</html>