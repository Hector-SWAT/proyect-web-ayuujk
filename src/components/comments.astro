// src/components/Comments.astro
const comments = [
  {
    id: 1,
    text: "Excelente servicio, taxistas altamente calificados!",
    rating: 5
  },
  {
    id: 2,
    text: "Todo el camino fue cómodo y seguro.",
    rating: 4
  },
  {
    id: 3,
    text: "Los choferes son muy amables y atentos.",
    rating: 5
  }
];
---

<!-- /* =========================================================
   Proyecto desarrollado con Astro + TailwindCSS + Node.js
   Autores: Hector-SWAT & Luis
