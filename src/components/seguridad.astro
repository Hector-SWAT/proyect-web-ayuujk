<style>
    /* Animación flotante nocturna para el taxi */
    .floating-taxi-night {
        animation: floatNight 4s ease-in-out infinite;
        filter: drop-shadow(0 0 10px rgba(59, 130, 246, 0.3));
    }

    @keyframes floatNight {
        0%,
        100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-15px);
        }
    }

    /* Efecto brillante nocturno para el texto */
    .glowing-text-shadow-night {
        text-shadow:
            2px 2px 4px rgba(0, 0, 0, 0.9),
            0 0 10px rgba(59, 130, 246, 0.6),
            0 0 20px rgba(59, 130, 246, 0.4),
            0 0 30px rgba(59, 130, 246, 0.2);
        animation: textGlowNight 2.5s ease-in-out infinite;
    }

    @keyframes textGlowNight {
        0%,
        100% {
            text-shadow:
                2px 2px 4px rgba(0, 0, 0, 0.9),
                0 0 10px rgba(59, 130, 246, 0.6),
                0 0 20px rgba(59, 130, 246, 0.4),
                0 0 30px rgba(59, 130, 246, 0.2);
        }
        50% {
            text-shadow:
                3px 3px 6px rgba(0, 0, 0, 1),
                0 0 15px rgba(59, 130, 246, 0.8),
                0 0 25px rgba(59, 130, 246, 0.6),
                0 0 40px rgba(59, 130, 246, 0.4);
        }
    }

    /* Efectos de sombra para texto nocturno */
    .text-shadow-white {
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
    }

    .text-shadow-dark {
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.9);
    }

    /* Animaciones para los elementos de seguridad */
    .security-item {
        animation: slideInRight 0.8s ease-out forwards;
        opacity: 0;
        transform: translateX(30px);
        background: rgba(0, 0, 0, 0.2);
        padding: 0.75rem;
        border-radius: 0.5rem;
        border-left: 3px solid rgba(59, 130, 246, 0.5);
        backdrop-filter: blur(5px);
    }

    .security-item:nth-child(1) {
        animation-delay: 0.1s;
    }
    .security-item:nth-child(2) {
        animation-delay: 0.2s;
    }
    .security-item:nth-child(3) {
        animation-delay: 0.3s;
    }
    .security-item:nth-child(4) {
        animation-delay: 0.4s;
    }
    .security-item:nth-child(5) {
        animation-delay: 0.5s;
    }

    @keyframes slideInRight {
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    /* Efectos hover para los iconos de seguridad */
    .security-icon {
        transition: all 0.3s ease;
        filter: drop-shadow(0 0 3px rgba(59, 130, 246, 0.3));
    }

    .security-item:hover {
        background: rgba(0, 0, 0, 0.4);
        border-left-color: rgba(59, 130, 246, 0.8);
        transform: translateX(-5px);
    }

    .security-item:hover .security-icon {
        transform: scale(1.15) rotate(-5deg);
        filter: drop-shadow(0 0 8px rgba(59, 130, 246, 0.6));
    }

    .security-item:hover .security-text {
        color: #60a5fa;
        transition: color 0.3s ease;
    }

    .security-item:hover .security-subtext {
        color: #93c5fd;
        transition: color 0.3s ease;
    }

    /* Indicador nocturno con pulsación */
    .night-indicator {
        animation: nightPulse 2s ease-in-out infinite;
    }

    @keyframes nightPulse {
        0%,
        100% {
            background-color: rgba(59, 130, 246, 0.5);
            box-shadow: 0 0 5px rgba(59, 130, 246, 0.3);
        }
        50% {
            background-color: rgba(59, 130, 246, 0.8);
            box-shadow: 0 0 15px rgba(59, 130, 246, 0.6);
        }
    }

    /* Responsive adjustments */
    @media (max-width: 640px) {
        .security-item {
            gap: 0.75rem;
            padding: 0.5rem;
        }

        .security-icon {
            width: 1.75rem;
            height: 1.75rem;
        }
    }
</style>

<script is:inline>
    // Menú móvil
    document
        .getElementById("mobileMenuButton")
        ?.addEventListener("click", () => {
            const button = document.getElementById("mobileMenuButton");
            button.style.transform = "scale(0.95)";
            setTimeout(() => {
                button.style.transform = "scale(1)";
                window.location.href = "/MobileMenu";
            }, 150);
        });

    // Efecto parallax nocturno solo para esta página
    let tickingNight = false;
    function updateNightParallax() {
        const scrolled = window.pageYOffset;
        const background = document.querySelector('[style*="fondo-noche.png"]');
        if (background) {
            background.style.backgroundPosition = `center ${scrolled * 0.05}px`;
        }
        tickingNight = false;
    }

    window.addEventListener("scroll", () => {
        if (!tickingNight) {
            requestAnimationFrame(updateNightParallax);
            tickingNight = true;
        }
    });

    // Efecto de estrellas parpadeantes (opcional)
    function createStars() {
        const main = document.querySelector("main");
        for (let i = 0; i < 5; i++) {
            const star = document.createElement("div");
            star.className = "star";
            star.style.cssText = `
                position: absolute;
                width: 2px;
                height: 2px;
                background: white;
                border-radius: 50%;
                opacity: 0.7;
                animation: twinkle ${2 + Math.random() * 3}s ease-in-out infinite;
                top: ${Math.random() * 50}%;
                right: ${Math.random() * 20}%;
            `;
            main.appendChild(star);
        }
    }

    // CSS para las estrellas
    const starStyle = document.createElement("style");
    starStyle.textContent = `
        @keyframes twinkle {
            0%, 100% { opacity: 0.3; transform: scale(1); }
            50% { opacity: 1; transform: scale(1.5); }
        }
    `;
    document.head.appendChild(starStyle);

    // Crear estrellas al cargar la página
    createStars();
</script>
