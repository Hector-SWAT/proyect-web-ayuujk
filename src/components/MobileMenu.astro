    <!-- Contenido del menú -->
    <div class="flex flex-col items-center justify-center min-h-screen space-y-6 px-6">
        <!-- Botones de navegación -->
        <a href="/" class="w-64 py-4 bg-gradient-to-r from-yellow-500 to-yellow-400 text-black font-bold text-center rounded-2xl shadow-lg hover:from-yellow-400 hover:to-yellow-300 transition-all duration-300 transform hover:scale-105">
            INICIO
        </a>
        
        <a href="/contacto" class="w-64 py-4 bg-gradient-to-r from-yellow-500 to-yellow-400 text-black font-bold text-center rounded-2xl shadow-lg hover:from-yellow-400 hover:to-yellow-300 transition-all duration-300 transform hover:scale-105">
            CONTACTO
        </a>
        
