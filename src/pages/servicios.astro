---
// src/pages/servicios.astro
import Layout from "../layouts/Layout.astro";
import MobileMenu from "../components/MobileMenu.astro";
---

<!-- /* =========================================================
   Proyecto desarrollado con Astro + TailwindCSS + Node.js
   Autores: Hector-SWAT & Luis
   Año: 2025
   DIMENSIONS 430x932 - MOBILE OPTIMIZED
========================================================= */ -->

<Layout title="AYUUJK - Servicios de Taxi en Los Angeles">
    <div class="w-full h-screen relative overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900" style="max-width: 430px; height: 932px; margin: 0 auto;">
        
        <!-- Elemento decorativo amarillo lateral -->
        <div class="absolute right-0 top-0 w-24 h-full">
            <button class="w-full h-full hover:scale-105 transition-transform duration-300">
                <img 
                    src="/services-icon/slide-services.png" 
                    alt="Barra lateral" 
                    class="w-full h-full object-cover"
                />
            </button>
        </div>

        <!-- Barra lateral del menú (posición original) -->
        <div class="fixed right-2 top-4 w-12 h-12 z-40 flex items-center justify-center">
            <button class="p-2 hover:scale-110 transition-transform">
                <img src="/services-icon/slide-services.png" alt="Menú" class="w-8 h-8" />
            </button>
            <MobileMenu />
        </div>

        <!-- Contenido principal -->
        <main class="relative z-10 h-full flex flex-col">
            
            <!-- Header con logo -->
            <div class="flex items-center justify-between px-6 py-4">
                <div class="flex items-center">
                    <img src="/logo.png" alt="AYUUJK Logo" class="w-12 h-12 object-contain" />
                </div>
                <!-- Indicadores de señal y batería simulados -->
                <div class="flex items-center gap-1 text-white text-sm">
                    <span>9:41</span>
                </div>
            </div>

            <!-- Título principal centrado -->
            <div class="text-center mt-8 mb-8">
                <h1 class="text-6xl font-bold text-white tracking-wider">AYUUJK</h1>
                <div class="w-16 h-1 bg-yellow-400 mx-auto mt-2"></div>
            </div>

            <!-- Imagen del taxi con efecto 3D -->
            <div class="flex-1 flex items-center justify-center px-6 mb-8">
                <div class="relative">
                    <!-- Sombra del taxi -->
                    <div class="absolute -bottom-4 left-1/2 transform -translate-x-1/2 w-64 h-8 bg-black/30 rounded-full blur-lg"></div>
                    <!-- Taxi principal -->
                    <img 
                        src="/services-icon/taxi-services.png" 
                        alt="Taxi AYUUJK" 
                        class="w-72 h-auto object-contain floating-taxi"
                    />
                    <!-- Efecto de brillo -->
                    <div class="absolute top-4 left-1/4 w-8 h-8 bg-yellow-300/40 rounded-full blur-md animate-pulse"></div>
                </div>
            </div>

            <!-- Sección de servicios -->
            <div class="px-6 pb-8">
                <!-- Título de servicios -->
                <h2 class="text-4xl font-bold text-yellow-400 mb-6 tracking-wider">SERVICIOS</h2>
                
                <!-- Lista de servicios -->
                <div class="space-y-4">
                    <div class="service-card">
                        <div class="service-icon-container">
                            <img src="/services-icon/24hr-icon.png" alt="24/7" class="w-8 h-8" />
                        </div>
                        <span class="service-text">Servicio 24/7</span>
                    </div>

                    <div class="service-card">
                        <div class="service-icon-container">
                            <img src="/services-icon/taximini-icon.png" alt="Transferencias" class="w-8 h-8" />
                        </div>
                        <div class="flex flex-col">
                            <span class="service-text">Transferencias</span>
                            <span class="text-gray-400 text-sm">Urbanas</span>
                        </div>
                    </div>

                    <div class="service-card">
                        <div class="service-icon-container">
                            <img src="/services-icon/avion-icon.png" alt="Aeropuerto" class="w-8 h-8" />
                        </div>
                        <span class="service-text">Viajes al aeropuerto</span>
                    </div>

                    <div class="service-card">
                        <div class="service-icon-container">
                            <img src="/services-icon/delivery-icon.png" alt="Delivery" class="w-8 h-8" />
                        </div>
                        <span class="service-text">Servicio de Entrega</span>
                    </div>
                </div>
            </div>

            <!-- Indicador inferior -->
            <div class="flex justify-center pb-4">
                <div class="w-32 h-1 bg-white/30 rounded-full"></div>
            </div>
        </main>
    </div>
</Layout>

<style is:global>
    body {
        @apply bg-gray-900 text-white;
        font-family: "Poppins", sans-serif;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    h1 {
        font-family: "Oswald", sans-serif;
        text-shadow: 0 4px 20px rgba(0, 0, 0, 0.8);
        letter-spacing: 0.1em;
    }

    h2 {
        font-family: "Oswald", sans-serif;
        text-shadow: 0 2px 10px rgba(255, 193, 7, 0.5);
    }

    /* Animación flotante para el taxi */
    .floating-taxi {
        animation: float 6s ease-in-out infinite;
        filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.3));
    }

    @keyframes float {
        0%, 100% {
            transform: translateY(0px) rotate(0deg);
        }
        25% {
            transform: translateY(-10px) rotate(1deg);
        }
        50% {
            transform: translateY(-5px) rotate(0deg);
        }
        75% {
            transform: translateY(-15px) rotate(-1deg);
        }
    }

    /* Tarjetas de servicio */
    .service-card {
        @apply flex items-center gap-4 p-4 bg-white/5 backdrop-blur-sm rounded-2xl border border-white/10;
        transition: all 0.3s ease;
    }

    .service-card:hover {
        @apply bg-white/10 border-yellow-400/30 transform translate-x-2;
        box-shadow: 0 8px 32px rgba(255, 193, 7, 0.1);
    }

    .service-icon-container {
        @apply w-12 h-12 bg-yellow-400 rounded-full flex items-center justify-center;
        box-shadow: 0 4px 15px rgba(255, 193, 7, 0.3);
    }

    .service-text {
        @apply text-white font-semibold text-lg;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    }

    /* Efectos de iluminación para las tarjetas */
    .service-card {
        position: relative;
        overflow: hidden;
    }

    .service-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
        transition: left 0.5s;
    }

    .service-card:hover::before {
        left: 100%;
    }

    /* Estilos responsivos */
    @media (max-width: 430px) {
        .w-72 {
            width: 16rem;
        }
        
        .text-6xl {
            font-size: 3.5rem;
        }
        
        .text-4xl {
            font-size: 2rem;
        }
    }

    /* Efecto de partículas en el fondo */
    .w-full::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
            radial-gradient(circle at 20% 20%, rgba(255, 193, 7, 0.05) 0%, transparent 50%),
            radial-gradient(circle at 80% 80%, rgba(255, 193, 7, 0.03) 0%, transparent 50%),
            radial-gradient(circle at 40% 60%, rgba(255, 255, 255, 0.02) 0%, transparent 50%);
        pointer-events: none;
    }
</style>