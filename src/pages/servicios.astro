---
// src/pages/servicios.astro
import Layout from "../layouts/Layout.astro";
import MobileMenu from "../components/MobileMenu.astro";
---

<Layout title="AYUUJK - Servicios de Taxi en Los Angeles">

    <!-- Fondo responsivo -->
    <div
        id="bg-fondo"
        class="absolute inset-0 w-full min-h-screen bg-bottom bg-cover bg-no-repeat -z-10"
        style="background-image: url('/services-icon/fondo-se.png');"
    ></div>
    
    <!-- Barra lateral -->
    <div class="absolute right-0 top-0 w-20 sm:w-24 h-full z-20">
        <button
            id="mobileMenuButton"
            class="w-full h-full hover:scale-105 transition-transform duration-300"
        >
            <img
                src="/services-icon/slide-services.png"
                alt="Barra lateral"
                class="w-full h-full object-cover"
            />
        </button>
    </div>

    <!-- Contenido principal -->
    <main class="relative z-30 flex flex-col min-h-screen max-w-[430px] mx-auto">
        
        <!-- Logo / bolita amarilla -->
        <div class="relative w-full flex justify-center">
            <div
                class="w-3 h-3 bg-yellow-400 rounded-full absolute"
                style="top: 130px; left: 300px; box-shadow: 0 0 8px 4px rgba(255, 200, 0, 0.6);"
            ></div>
        </div>

        <!-- Título -->
        <div class="text-center mb-12 pt-36">
            <h1 class="text-4xl font-Oswald font-semibold mb-4 tracking-wider text-white">
                AYUUJK
            </h1>
        </div>

        <!-- Taxi con sombra -->
        <div class="flex-1 flex items-center justify-center px-6 mb-8">
            <div class="relative">
                <div
                    class="absolute -bottom-4 left-1/2 -translate-x-1/2 w-64 h-8 bg-black/30 rounded-full blur-lg"
                ></div>
                <img
                    src="/services-icon/taxi-services.png"
                    alt="Taxi AYUUJK"
                    class="w-80 h-auto object-contain floating-taxi"
                />
            </div>
        </div>

        <!-- Subtítulos -->
        <div class="text-center mb-3 pt-2">
            <h2 class="text-3xl font-Poppins font-bold tracking-wide glowing-text-shadow mb-1 text-amber-500">
                SERVICIOS DE TAXI
            </h2>
            <h2 class="text-3xl font-poppins font-bold tracking-wide glowing-text-shadow text-amber-500">
                EN LOS ANGELES
            </h2>
        </div>

        <!-- Servicios -->
        <div class="px-6 sm:px-10 pb-12 w-full">
            <div class="space-y-5">
                <!-- Servicio 24/7 -->
                <div class="flex items-center gap-4 text-shadow-white service-item">
                    <img src="/services-icon/24hr-icon.png" alt="24/7" class="w-8 h-8 service-icon" />
                    <span class="text-white font-semibold text-base sm:text-lg service-text">Servicio 24/7</span>
                </div>

                <!-- Transferencias -->
                <div class="flex items-center gap-4 text-shadow-white service-item">
                    <img src="/services-icon/taximini-icon.png" alt="Transferencias" class="w-8 h-8 service-icon" />
                    <div class="flex flex-col">
                        <span class="text-white font-semibold text-base sm:text-lg service-text">Transferencias</span>
                        <span class="text-gray-300 text-sm text-shadow-dark service-subtext">Urbanas</span>
                    </div>
                </div>

                <!-- Aeropuerto -->
                <div class="flex items-center gap-4 text-shadow-white service-item">
                    <img src="/services-icon/avion-icon.png" alt="Aeropuerto" class="w-8 h-8 service-icon" />
                    <span class="text-white font-semibold text-base sm:text-lg service-text">Viajes al aeropuerto</span>
                </div>

                <!-- Delivery -->
                <div class="flex items-center gap-4 text-shadow-white service-item">
                    <img src="/services-icon/delivery-icon.png" alt="Delivery" class="w-8 h-8 service-icon" />
                    <span class="text-white font-semibold text-base sm:text-lg service-text">Servicio de Entrega</span>
                </div>
            </div>
        </div>

        <!-- Indicador inferior -->
        <div class="flex justify-center pb-4">
            <div class="w-32 h-1 bg-white/30 rounded-full"></div>
        </div>
    </main>
</Layout>

<script is:inline>
    // Menú móvil
    document.getElementById("mobileMenuButton")?.addEventListener("click", () => {
        const button = document.getElementById("mobileMenuButton");
        button.style.transform = "scale(0.95)";
        setTimeout(() => {
            button.style.transform = "scale(1)";
            window.location.href = "/MobileMenu";
        }, 150);
    });

    // Parallax del fondo
    window.addEventListener("scroll", () => {
        const scrolled = window.pageYOffset;
        const background = document.getElementById("bg-fondo");
        if (background) {
            background.style.backgroundPosition = `center ${scrolled * 0.2}px`;
        }
    });
</script>
