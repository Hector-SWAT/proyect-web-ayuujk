---
// src/pages/seguridad.astro
import Layout from "../layouts/Layout.astro";
import MobileMenu from "../components/MobileMenu.astro";
---

<!-- /* =========================================================
   Proyecto desarrollado con Astro + TailwindCSS + Node.js
   Autores: Hector-SWAT & Luis
   Año: 2025
   DIMENSIONS 430x932 - MOBILE OPTIMIZED
========================================================= */ -->
<Layout title="AYUUJK - Seguridad de Taxi en Los Angeles">
    <!-- Fondo responsivo -->
    <div
        class="absolute inset-0 w-full h-full bg-bottom bg-cover bg-no-repeat"
        style="background-image: url('/seguridad-icons/fondo-se.png');"
    >
    </div>

    <!-- Elemento decorativo amarillo lateral -->
    <div class="absolute right-0 top-0 w-20 sm:w-24 h-full z-20">
        <button
            id="mobileMenuButton"
            class="w-full h-full hover:scale-105 transition-transform duration-300"
        >
            <img
                src="/services-icon/slide-services.png"
                alt="Barra lateral"
                class="w-full h-full object-cover"
            />
        </button>
    </div>

    <!-- Contenido principal -->
    <main
        class="relative z-30 flex flex-col items-center justify-start min-h-screen max-w-[430px] mx-auto px-6"
    >
        <!-- Logo -->
        <div class="flex items-center mt-12">
            <a href="/" class="flex items-center">
                <img
                    src="/logo.png"
                    alt="AYUUJK Logo"
                    class="w-20 h-20 object-contain"
                />
            </a>
        </div>

        <!-- Título principal -->
        <div class="flex flex-col items-center mt-20 mb-12 relative">
            <h1
                class="text-4xl font-Oswald font-semibold mb-4 tracking-wider text-white relative inline-block"
            >
                AYUUJK
                <span class="absolute -top-2 -right-4 w-3 h-3">
                    <span
                        class="absolute inset-0 w-3 h-3 bg-yellow-400 rounded-full"
                    ></span>
                    <span
                        class="absolute inset-0 w-3 h-3 bg-yellow-300 rounded-full animate-ping opacity-30"
                    ></span>
                </span>
            </h1>
        </div>

        <!-- Imagen taxi con sombra -->
        <div class="flex-1 flex items-center justify-center w-full mb-8">
            <div class="relative">
                <div
                    class="absolute -bottom-4 left-1/2 transform -translate-x-1/2 w-64 h-8 bg-black/30 rounded-full blur-lg"
                >
                </div>
                <img
                    src="/seguridad-icons/taxi-seguridad.png"
                    alt="Taxi AYUUJK"
                    class="w-80 h-auto object-contain floating-taxi"
                />
            </div>
        </div>

        <!-- Servicios -->
        <!-- <div class="w-full px-6 sm:px-10 pb-12"> -->
        <!-- Aquí van tus tarjetas de servicios -->

        <!-- Servicios -->
        <div class="px-6 sm:px-10 pb-12">
            <h2
                class="text-3xl sm:text-4xl font-Oswald font-bold text-yellow-400 mb-4 tracking-wider"
            >
                SEGURIDAD Y CONFIANZA
            </h2>

            <p
                class="text-white font-Poppins font-semibold text-lg sm:text-2xl mb-8 quote-text"
            >
                Tranquilidad en cada kilómetro.
            </p>

            <div class="space-y-4">
                <!-- Conductores -->
                <div
                    class="flex items-center gap-4 p-4 rounded-2xl transition-all duration-300 hover:bg-orange-200/20"
                >
                    <img
                        src="/seguridad-icons/24hr-icon.png"
                        alt="24/7"
                        class="w-8 h-8"
                    />
                    <span class="text-white font-semibold text-base sm:text-lg">
                        Conductores Calificados
                    </span>
                </div>

                <!-- Vehículos -->
                <div
                    class="flex items-center gap-4 p-4 rounded-2xl transition-all duration-300 hover:bg-orange-200/20"
                >
                    <img
                        src="/services-icon/taximini-icon.png"
                        alt="Taxi"
                        class="w-8 h-8"
                    />
                    <span class="text-white font-semibold text-base sm:text-lg">
                        Vehículos en buenas condiciones
                    </span>
                </div>

                <!-- Atención -->
                <div
                    class="flex items-center gap-4 p-4 rounded-2xl transition-all duration-300 hover:bg-orange-200/20"
                >
                    <img
                        src="/seguridad-icons/24hr-icon.png"
                        alt="Atención 24/7"
                        class="w-8 h-8"
                    />
                    <span class="text-white font-semibold text-base sm:text-lg">
                        Atención 24/7
                    </span>
                </div>
            </div>
        </div>

        <!-- Indicador inferior -->
        <div class="flex justify-center pb-4">
            <div class="w-32 h-1 bg-white/30 rounded-full"></div>
        </div>
    </main>
</Layout>

<script is:inline>
    // Funcionalidad del botón del menú móvil
    document
        .getElementById("mobileMenuButton")
        ?.addEventListener("click", () => {
            const button = document.getElementById("mobileMenuButton");
            button.style.transform = "scale(0.95)";
            setTimeout(() => {
                button.style.transform = "scale(1)";
                window.location.href = "/MobileMenu";
            }, 150);
        });

    // Efecto parallax sutil para el fondo
    window.addEventListener("scroll", () => {
        const scrolled = window.pageYOffset;
        const background = document.querySelector(
            'div[style*="background-image"]',
        );
        if (background) {
            background.style.backgroundPosition = `center ${scrolled * 0.2}px`;
        }
    });

    // Efecto de typing para la frase final
    document.addEventListener("DOMContentLoaded", () => {
        setTimeout(() => {
            const quoteText = document.querySelector(".quote-text");
            if (quoteText) {
                const originalText = quoteText.textContent;
                quoteText.textContent = "";
                let i = 0;
                const typeWriter = () => {
                    if (i < originalText.length) {
                        quoteText.textContent += originalText.charAt(i);
                        i++;
                        setTimeout(typeWriter, 50);
                    }
                };
                typeWriter();
            }
        }, 1500);
    });
</script>

<style is:global>
    :root {
        --font-oswald: "Oswald", sans-serif;
        --font-poppins: "Poppins", sans-serif;
    }

    body {
        font-family: var(--font-poppins);
        background-color: #22272b;
        color: white;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    h1,
    h2 {
        font-family: var(--font-oswald);
    }

    h1 {
        text-shadow: 0 4px 20px rgba(0, 0, 0, 0.8);
        letter-spacing: 0.1em;
    }

    h2 {
        text-shadow: 0 2px 10px rgba(255, 193, 7, 0.5);
    }

    /* Animación flotante para el taxi */
    .floating-taxi {
        animation: float 6s ease-in-out infinite;
        filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.3));
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0px) rotate(0deg);
        }
        25% {
            transform: translateY(-10px) rotate(1deg);
        }
        50% {
            transform: translateY(-5px) rotate(0deg);
        }
        75% {
            transform: translateY(-15px) rotate(-1deg);
        }
    }

    .hover\:bg-orange-200\/20:hover {
        position: relative;
        overflow: hidden;
    }

    .hover\:bg-orange-200\/20:hover::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(255, 255, 255, 0.1),
            transparent
        );
        transition: left 0.5s;
    }

    .hover\:bg-orange-200\/20:hover::before {
        left: 100%;
    }

    @media (max-width: 430px) {
        .text-4xl {
            font-size: 2rem;
        }
    }
</style>
